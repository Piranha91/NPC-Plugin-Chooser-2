<Window x:Class="NPC_Plugin_Chooser_2.Views.MasterSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Masters to Analyze"
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Analyzing Masters For:" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,5"/>
        
        <TextBlock Grid.Row="1" 
                   x:Name="TargetPluginTextBlock"
                   Text="[Plugin Name]"
                   Foreground="DarkBlue"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <!-- Master Selection List -->
        <GroupBox Grid.Row="2" Header="Select Masters to Analyze" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Select All/None Buttons -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,5,5,5">
                    <Button Content="Select All" 
                            x:Name="SelectAllButton"
                            Click="SelectAllButton_Click"
                            Padding="10,3" 
                            Margin="0,0,5,0"/>
                    <Button Content="Select None" 
                            x:Name="SelectNoneButton"
                            Click="SelectNoneButton_Click"
                            Padding="10,3"/>
                </StackPanel>
                
                <!-- ListBox with Checkboxes -->
                <ListBox Grid.Row="1" 
                         x:Name="MastersListBox"
                         SelectionMode="Multiple"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding FileName}" 
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      Margin="5,3"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>

        <!-- Status/Info -->
        <TextBlock Grid.Row="3" 
                   x:Name="StatusTextBlock"
                   Text="Select the masters you want to analyze, then click Analyze."
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Analyze" 
                    x:Name="AnalyzeButton"
                    Click="AnalyzeButton_Click"
                    IsDefault="True"
                    MinWidth="80" 
                    Padding="15,5" 
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    x:Name="CancelButton"
                    Click="CancelButton_Click"
                    IsCancel="True"
                    MinWidth="80" 
                    Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
