<Window x:Class="NPC_Plugin_Chooser_2.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NPC_Plugin_Chooser_2.View_Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:VM_ProgressWindow}"
        Title="{Binding Title}"
        Height="180" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Topmost="True"
        ShowInTaskbar="False"
        Style="{StaticResource ThemedWindowStyle}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status Message -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding StatusMessage}" 
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"
                   FontSize="12"/>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" 
                     Height="25"
                     Minimum="0"
                     Maximum="{Binding ProgressMaximum}"
                     Value="{Binding ProgressValue}"
                     IsIndeterminate="{Binding IsIndeterminate}"
                     Margin="0,0,0,10"/>

        <!-- Progress Text -->
        <TextBlock Grid.Row="2" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <Run Text="{Binding ProgressValue, StringFormat='{}{0:F0}', Mode=OneWay}"/>
            <Run Text=" / "/>
            <Run Text="{Binding ProgressMaximum, StringFormat='{}{0:F0}', Mode=OneWay}"/>
        </TextBlock>

        <!-- Cancel Button -->
        <Button Grid.Row="3" 
                Content="Cancel"
                Command="{Binding CancelCommand}"
                IsEnabled="{Binding CanCancel}"
                Width="100"
                Height="30"
                HorizontalAlignment="Center"/>
    </Grid>
</Window>