<Window x:Class="NPC_Plugin_Chooser_2.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NPC_Plugin_Chooser_2.View_Models"
        mc:Ignorable="d"
        Title="Initializing." Height="350" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Topmost="True"
        d:DataContext="{d:DesignInstance Type=vm:VM_SplashScreen, IsDesignTimeCreatable=False}">
    <Border Background="#FF333337" CornerRadius="5" BorderBrush="#FF4A4A50" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Source="{Binding ImagePath, Mode=OneWay}" Stretch="Uniform" Margin="20,20,20,10" MaxHeight="200"/>

            <TextBlock Grid.Row="1" Text="{Binding ProgramVersion, Mode=OneWay, StringFormat='NPC Plugin Chooser {0}'}"
                       Foreground="WhiteSmoke" HorizontalAlignment="Center" FontSize="14" Margin="0,5,0,10"/>

            <StackPanel Grid.Row="2" Margin="20,0,20,5">
                <TextBlock Text="{Binding StepText, Mode=OneWay}" Foreground="WhiteSmoke" 
                           HorizontalAlignment="Center" FontSize="13" Margin="0,0,0,3">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StepText}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StepText}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <ProgressBar Value="{Binding ProgressValue, Mode=OneWay}" Height="15" Minimum="0" Maximum="100" />
                <TextBlock Text="{Binding OperationText, Mode=OneWay}" Foreground="LightGray" HorizontalAlignment="Center" FontSize="12" Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
            
            <Grid Grid.Row="3" Margin="10,0,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding FooterMessage, Mode=OneWay}"
                           Foreground="#FF888888" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                           FontSize="10">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FooterMessage}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FooterMessage}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Grid.Column="1" Text="{Binding ElapsedTimeString, Mode=OneWay}"
                           Foreground="#FF888888" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                           FontSize="10" />
            </Grid>
            </Grid>
    </Border>
</Window>