<Window x:Class="NPC_Plugin_Chooser_2.Views.KeywordSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:themes="clr-namespace:NPC_Plugin_Chooser_2.Themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Set Keywords"
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Style="{StaticResource ThemedWindowStyle}">

    <i:Interaction.Behaviors>
        <themes:TitleBarThemingBehavior />
    </i:Interaction.Behaviors>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Setting Keywords For:" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,5"/>
        
        <TextBlock Grid.Row="1" 
                   x:Name="ModNameTextBlock"
                   Text="[Mod Name]"
                   Foreground="{DynamicResource PrimaryForeground}"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Current Mod's Keywords -->
            <GroupBox Grid.Column="0" Header="Current Keywords" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,5,5,5">
                        <Button Content="Remove Selected" 
                                x:Name="RemoveSelectedButton"
                                Click="RemoveSelectedButton_Click"
                                Padding="10,3" 
                                ToolTip="Remove the selected keyword from this mod"/>
                        <Button Content="Clear All" 
                                x:Name="ClearAllButton"
                                Click="ClearAllButton_Click"
                                Padding="10,3"
                                Margin="5,0,0,0"
                                ToolTip="Remove all keywords from this mod"/>
                    </StackPanel>
                    
                    <ListBox Grid.Row="1" 
                             x:Name="CurrentKeywordsListBox"
                             SelectionMode="Single"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="5,3"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Grid.Row="2" Margin="5,5,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 x:Name="NewKeywordTextBox"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Type a new keyword and press Add or Enter"/>
                        <Button Grid.Column="1" 
                                Content="Add" 
                                x:Name="AddNewKeywordButton"
                                Click="AddNewKeywordButton_Click"
                                Padding="10,3" 
                                Margin="5,0,0,0"
                                ToolTip="Add the typed keyword to this mod"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <!-- Center: Transfer Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5">
                <Button Content="&lt;&lt; Add" 
                        x:Name="AddFromOthersButton"
                        Click="AddFromOthersButton_Click"
                        Padding="10,5" 
                        Margin="0,5"
                        ToolTip="Add the selected keyword from other mods to this mod"/>
            </StackPanel>

            <!-- Right Panel: Keywords from Other Mods -->
            <GroupBox Grid.Column="2" Header="Keywords from Other Mods" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,5,5,5">
                        <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="FilterTextBox" 
                                 MinWidth="150" 
                                 TextChanged="FilterTextBox_TextChanged"
                                 ToolTip="Filter the list of available keywords"/>
                    </StackPanel>
                    
                    <ListBox Grid.Row="1" 
                             x:Name="OtherKeywordsListBox"
                             SelectionMode="Single"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             MouseDoubleClick="OtherKeywordsListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="5,3"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>
        </Grid>

        <TextBlock Grid.Row="3" 
                   x:Name="StatusTextBlock"
                   Text="Double-click a keyword on the right to add it, or select and click Add."
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource DisabledForeground}"
                   Margin="0,10,0,10"/>

        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="OK" 
                    x:Name="OkButton"
                    Click="OkButton_Click"
                    IsDefault="True"
                    MinWidth="80" 
                    Padding="15,5" 
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    x:Name="CancelButton"
                    Click="CancelButton_Click"
                    IsCancel="True"
                    MinWidth="80" 
                    Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
